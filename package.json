{
  "name": "simplelogin-extension",
  "version": "3.0.6",
  "betaRev": "0",
  "description": "SimpleLogin Browser Extension",
  "author": "extension@simplelogin.io",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prettier": "prettier \"src/**/*.{js,vue}\"",
    "prettier:write": "bun run prettier -- --write",
    "prettier:check": "prettier --check \"src/**/*.{js,vue}\"",
    "build": "cross-env NODE_ENV=production vite build",
    "build:firefox": "cross-env NODE_ENV=production FIREFOX=true vite build",
    "build:firefox:beta": "cross-env NODE_ENV=production VITE_BETA=1 FIREFOX=true vite build",
    "build:lite": "cross-env NODE_ENV=production LITE=true vite build",
    "build:beta": "cross-env NODE_ENV=production VITE_BETA=true vite build",
    "build:mac": "cross-env NODE_ENV=production VITE_MAC=true vite build",
    "generate:zip": "bun scripts/buildZip.ts",
    "generate:buildConfig": "bun scripts/generateBuildConfig.ts",
    "start": "cross-env HMR=true NODE_ENV=development BETA=1 webpack -- --watch",
    "start:mac": "cross-env HMR=true NODE_ENV=development BETA=1 MAC=1 webpack -- --watch",
    "start:firefox": "cross-env HMR=true NODE_ENV=development BETA=1 FIREFOX=1 webpack -- --watch"
  },
  "dependencies": {
    "@iconify-json/fa-solid": "^1.2.0",
    "@sentry/vue": "^8.34.0",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "^11.2.0",
    "bootstrap": "^5.3.3",
    "bootstrap-vue-next": "~0.25.5",
    "browser": "^0.2.6",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@floating-ui/vue": "^1.1.5",
    "@rushstack/eslint-patch": "^1.10.4",
    "@tsconfig/node20": "^20.1.4",
    "@types/archiver": "^6.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.14.9",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/compiler-sfc": "^3.5.12",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "archiver": "^7.0.1",
    "bun-types": "^1.1.30",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-vue": "^9.29.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "sass": "^1.80.2",
    "typescript": "^5.6.3",
    "unplugin-icons": "^0.19.3",
    "unplugin-vue-components": "^0.27.4",
    "vite": "^5.4.9",
    "vitest": "^2.1.3",
    "vue-tsc": "^2.1.6"
  },
  "packageManager": "bun@1.1.34"
}
